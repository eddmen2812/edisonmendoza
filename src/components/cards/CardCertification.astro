---
interface Props {
  imagePath: string;
  name?: string;
  alt: string;
  link:string;
}

const { imagePath, name, alt, link }: Props = Astro.props;
---

<div class="card">
  <div class="body">
    <a href={link} target="_blank" rel="noopener noreferrer">
    <img src={imagePath} alt={`${alt}-image`} loading="lazy"></a>
    <p class="title"> {name} </p>
  
  </div>
</div>

<style>
  .card {

    border-radius: 1rem;
    padding: 1rem;
    background-color: var(--bg-color-5);
    transition: 0.3s;
    border: 1px solid var(--border-color-nav);
  }

  .card .body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 8px;
    width: 100%;
    height: 100%;
  }

  .card .body img {
    width: auto;
    height: 60px;
  }

  .card .body p.title {
    text-align: center;
    font-size: 20px;
    font-weight: 500;
    color: var(--bg-color-4);
  }
  .card .body p.titletransp {
    text-align: center;
    font-size: 18px;
    
    color: yellowgreen;
  }


  @media (max-width: 480px) {
    .card {
      border-radius: 0.8rem;
      padding: 0.8rem;
    }

    .card .body img {
      
      height: 35px;
    }
    .card .body p.title {
      font-size: 14px;
    }
  }
</style>
