import TryHackMeIcon from '../components/icons/tryhackme-icon.astro'
import {
  GITHUB_URL,
  LINKEDIN_URL,
  PUCE_URL,
  BADGE_CISCO_URL,
  ACAD_CIBER_BADGE_URL,
  ACAD_HM_BADGE_URL,
  LPI01_CERT_URL,
  TRYHACK_PROFILE_URL,
} from "../constants/urls.ts";
