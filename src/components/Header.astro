<style>
  section {
    display: flex;
    flex-direction: column-reverse;
    position: absolute;
    width: 100%;
  }
  header {
    position: fixed;
    z-index: 999;
    padding: 40px 16px;
    height: 80px;
    width: 80%;
    border: 0.5px solid var(--border-color-nav);
    border-radius: 40px;
    background: var(--bg-color);
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 8px;
  }

  .header-content {
    width: 100%; /* Ajuste el ancho del contenido del encabezado */
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  header p.logo-header {
    font-family: Georgia, "Times New Roman", Times, serif;
    font-size: 52px;
    color: var(--primary-color);
    display: flex;
    align-items: center;
  }

  header p.logo-header span {
    color: #ff0000;
    display: flex;
    align-items: center;
  }

  header .social-icons {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  header .social-icons a {
    text-decoration: none;
    transition: 0.4s;
    color: var(--secondary-color);
    font-size: 16px;
    display: flex;
    align-items: center;
  }

  header .social-icons a:hover {
    color: var(--primary-color);
  }
  @media (max-width: 768px) {
    header {
      padding: 2%;
      width: 100%;
      text-align: center;
    }
    header .logo-header {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto; /* AÃ±ade margen automÃ¡tico para centrar verticalmente */
    }


    header .social-icons {
      display: none; /* Oculta los Ã­conos en dispositivos mÃ³viles */
    }
  }
  @media (max-width: 900px) {
    header p.logo-header {
      font-size: 46px;
    }
  }

  @media (max-width: 480px) {
    header p.logo-header {
      font-size: 36px;
    }
  }
</style>
