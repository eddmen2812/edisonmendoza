---
import CardEducation from "../components/cards/CardEducation.astro";
import {
    cardsCulminate,
    cardsCurrent,
} from "../data/skills.json";
---

<section id="educations">
    <span class="title">Educaci√≥n üßë‚Äçüéì</span>
    <div class="educations">
        <div class="education">
            <span class="subtitle">Estado: Cursando...</span>
            <span class="tretitle" >Titulo a Obtener:</span>
            <div class="cards">
                {
                    cardsCurrent.map(({ name, imagePath, alt, link }) => (
                        <CardEducation
                            name={name}
                            imagePath={imagePath}
                            alt={alt}
                            link={link}
                        />
                    ))
                }
            </div>
        </div>
        <div class="education">
            <span class="subtitle">Estado: Culminado.</span>
            <span class="tretitle">Titulo Obtenido:</span>
            <div class="cards">
                {
                    cardsCulminate.map(({ name, imagePath, alt, link }) => (
                   
                        <CardEducation 
                            name={name}
                            imagePath={imagePath}
                            alt={alt}
                            link={link}
                        />
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    section#educations {
        display: flex;
        flex-direction: column;
        justify-content: center;
        position: relative;
        width: 100%;
    }

    .educations {
        display: flex;
        flex-direction: column;
        gap: 1.6rem;
        width: 100%;
    }

    .educations .education {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .subtitle {
        font-size: 28px;
        font-weight: bold;
        color: var(--font-color);
    }
    .tretitle {
        font-size: 20px;
        font-weight: bold;
        color: var(--font-color);
    }

    .cards {
        display: flex;
        grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
        grid-auto-rows: 1fr;
        grid-auto-flow: dense;
        grid-gap: 0.8rem;
    }

    @media (max-width: 900px) {
        section#educations {
            justify-content: flex-start;
            align-items: center;
        }
        section#educations h1.title {
            align-self: flex-start;
        }
    }

    @media (max-width: 480px) {
        .subtitle {
            font-size: 22px;
        }
    }
</style>
