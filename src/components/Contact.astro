<script>
  const copyToClipboard = () => {
    const emailUrl = document.querySelector(".email span")?.textContent || "";
    navigator.clipboard.writeText(emailUrl);

    const copyButton = document.querySelector(".copy");
    const copyMessage = document.querySelector(".copy-message");

    // Guardar el texto original del botÃ³n
    const buttonTextElement = document.querySelector(".button-text");

    if (buttonTextElement) {
      const originalButtonText = buttonTextElement.textContent;

      // Cambiar el texto del botÃ³n a "Email copiado!"
      buttonTextElement.textContent = "";

      // Verificar si copyMessage existe antes de acceder a su propiedad style
      if (copyMessage instanceof HTMLElement) {
        copyMessage.style.display = "inline";

        // Restaurar el texto original despuÃ©s de unos segundos (por ejemplo, 3 segundos)
        setTimeout(() => {
          if (buttonTextElement) {
            buttonTextElement.textContent = originalButtonText;

            // Verificar si copyMessage.style existe antes de acceder a su propiedad display
            if (copyMessage.style) {
              copyMessage.style.display = "none";
            }
          }
        }, 3000);
      }
    }
  };

  document.querySelector(".copy.icon")?.addEventListener("click", () => {
    copyToClipboard();
  });
</script>

